<div class="w-1/2 px-2 pt-6 pb-8 mx-auto mb-4 text-lg">My Notes</div>
<% @mine.each do |m| %>
<div class="w-1/2 px-8 pt-6 pb-8 mx-auto mb-4 bg-white rounded shadow-md">
  <p><%= m.title %></p>
  <p><%= m.body %></p>
  <div class="">
<% if user_signed_in? && current_user.id == m.user_id %>
    <div class="inline-block m-2"><%= link_to show_svg('pencil.svg'), edit_note_path(m), title: 'Edit' %></div>
    <div class="inline-block m-2"><%= link_to show_svg('trash.svg'), m, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %></div>
<% end %>
</div>
</div>
<% end %>
