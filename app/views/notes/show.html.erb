<div class="w-1/2 px-8 pt-6 pb-8 mx-auto mb-4 bg-white rounded shadow-md">
  <div class="mb-3 text-lg">
    <p>Note you are viewing: <strong><%= @note.title %></strong></p>

    <p class="mb-3">
      <%= image_tag @note.image_url if @note.image %>
    </p>

    <p class="text-sm">
      Created by:
     <strong> <%= fullname(@note.user) %></strong>
    </p>

  </div>

  <p class="mb-3">
    <%= @note.body %>
  </p>
  <p class="text-sm">
    <% if current_user.id == @note.user_id %>
      <%= link_to 'Edit', edit_note_path(@note) %> |
    <% end %>
    <%= link_to 'Back', notes_path %>
  </p>
</div>
